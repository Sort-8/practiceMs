<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.location.mapper.LocationInfoMapper">

    <resultMap type="LocationInfo" id="LocationInfoResult">
        <result property="locationId"    column="location_id"    />
        <result property="companyName"    column="company_name"    />
        <result property="address"    column="address"    />
        <result property="contacts"    column="contacts"    />
        <result property="phone"    column="phone"    />
        <result property="nature"    column="nature"    />
        <result property="leader"    column="leader"    />
        <result property="status"    column="status"    />
        <result property="delFlag"    column="del_flag"    />
    </resultMap>

    <sql id="selectLocationInfoVo">
        select location_id, company_name, address, contacts, phone, nature, leader, status, del_flag from sys_location_info
    </sql>

    <select id="selectLocationInfoList" parameterType="LocationInfo" resultMap="LocationInfoResult">
        <include refid="selectLocationInfoVo"/>
        <where>
            <if test="companyName != null  and companyName != ''"> and company_name like concat('%', #{companyName}, '%')</if>
            <if test="address != null  and address != ''"> and address like concat('%', #{address}, '%')</if>
            <if test="contacts != null  and contacts != ''"> and contacts like concat('%', #{contacts}, '%')</if>
            <if test="phone != null  and phone != ''"> and phone like concat('%', #{phone}, '%')</if>
            <if test="nature != null  and nature != ''"> and nature like concat('%', #{nature}, '%')</if>
            <if test="leader != null  and leader != ''"> and leader like concat('%', #{leader}, '%')</if>
        </where>
    </select>

    <select id="selectLocationInfoById" parameterType="Long" resultMap="LocationInfoResult">
        <include refid="selectLocationInfoVo"/>
        where location_id = #{locationId}
    </select>

    <insert id="insertLocationInfo" parameterType="LocationInfo" useGeneratedKeys="true" keyProperty="locationId">
        insert into sys_location_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="companyName != null and companyName != ''">company_name,</if>
            <if test="address != null and address != ''">address,</if>
            <if test="contacts != null and contacts != ''">contacts,</if>
            <if test="phone != null and phone != ''">phone,</if>
            <if test="nature != null and nature != ''">nature,</if>
            <if test="leader != null and leader != ''">leader,</if>
            <if test="status != null">status,</if>
            <if test="delFlag != null">del_flag,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="companyName != null and companyName != ''">#{companyName},</if>
            <if test="address != null and address != ''">#{address},</if>
            <if test="contacts != null and contacts != ''">#{contacts},</if>
            <if test="phone != null and phone != ''">#{phone},</if>
            <if test="nature != null and nature != ''">#{nature},</if>
            <if test="leader != null and leader != ''">#{leader},</if>
            <if test="status != null">#{status},</if>
            <if test="delFlag != null">#{delFlag},</if>
         </trim>
    </insert>

    <update id="updateLocationInfo" parameterType="LocationInfo">
        update sys_location_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="companyName != null and companyName != ''">company_name = #{companyName},</if>
            <if test="address != null and address != ''">address = #{address},</if>
            <if test="contacts != null and contacts != ''">contacts = #{contacts},</if>
            <if test="phone != null and phone != ''">phone = #{phone},</if>
            <if test="nature != null and nature != ''">nature = #{nature},</if>
            <if test="leader != null and leader != ''">leader = #{leader},</if>
            <if test="status != null">status = #{status},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
        </trim>
        where location_id = #{locationId}
    </update>

    <delete id="deleteLocationInfoById" parameterType="Long">
        delete from sys_location_info where location_id = #{locationId}
    </delete>

    <delete id="deleteLocationInfoByIds" parameterType="String">
        delete from sys_location_info where location_id in
        <foreach item="locationId" collection="array" open="(" separator="," close=")">
            #{locationId}
        </foreach>
    </delete>

    <update id="updateLocationStatus" parameterType="LocationInfo">
        update sys_location_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="status != null">status = #{status},</if>
        </trim>
        where location_id = #{locationId}
    </update>
</mapper>
